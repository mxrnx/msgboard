<div class="thread">
    <%- include('partials/originalPost.ejs', { thread }) %>
</div>

<% replies.forEach(reply => { %>
    <%- include('partials/reply.ejs', { reply }) %>
<% }) %>

<% if (thread.isArchived) { %>
    <p class="archived">Colloquium in tabulis servatum est. Respondere iam non potest.</p>
<% } else { %>
    <div class="reply-form">
        <form method="POST" action="/addPost">
            <input type="hidden" name="reply_to" value="<%= thread.id %>">

            <div class="form-group">
                <label for="message">Nuntium</label>
                <textarea name="message" id="message" rows="5" maxlength="<%= config.maxMessageLength %>" required></textarea>
            </div>

            <button type="submit">Respondere</button>
        </form>
    </div>

    <p><a href="/">Return</a></p>
<% } %>
